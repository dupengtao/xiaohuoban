<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@drawable/action_bar_bg" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/action_bar_height" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/action_bar_height"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/action_bar_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/action_bar_dark_left_button"
            android:src="@drawable/action_bar_glyph_back" />

        <TextView
            android:id="@+id/action_bar_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.0"
            android:paddingLeft="@dimen/action_bar_title_left_padding"
            android:shadowColor="@color/action_bar_title_textview_shadow_dark"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="0.1"
            android:text="Title"
            android:textColor="@color/action_bar_title_textview_dark"
            android:textSize="@dimen/action_bar_title" />

        <FrameLayout
            android:id="@+id/action_bar_textview_custom_title_container"
            android:layout_width="0.0px"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0" />
    </LinearLayout>

</FrameLayout>