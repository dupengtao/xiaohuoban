<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_answer_list"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@drawable/selector_item_answer_list"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/arrow_item_answer_list"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginRight="3dp"
		android:layout_marginLeft="2dp"
		android:background="@drawable/arrow_right" 
		android:layout_centerVertical="true"/>
    <ImageView
		android:id="@+id/image_item_answer_list"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@id/arrow_item_answer_list"
		android:layout_centerVertical="true"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_toLeftOf="@+id/image_item_answer_list">
	    <TextView
	        android:id="@+id/title_item_answer_list"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="2dp"
	        android:textColor="#000000"
	        android:textSize="18sp"
	        android:text="鸡" />
		<TextView
	        android:id="@+id/description_item_answer_list"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="2dp"
	        android:textColor="#000000"
	        android:textSize="14sp"
	        android:text="我就是一只傻鸡" />
	</LinearLayout>
</RelativeLayout>